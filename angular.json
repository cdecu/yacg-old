{
  "version": 2,
  "cli": { "defaultCollection": "@nrwl/node", "packageManager": "yarn" },
  "defaultProject": "json2code",
  "generators": {
    "@nrwl/node:library": { "buildable": true, "publishable": true },
    "@nrwl/angular:application": {
      "style": "scss",
      "linter": "eslint",
      "unitTestRunner": "jest",
      "e2eTestRunner": "cypress",
      "strict": true
    },
    "@nrwl/angular:library": {
      "style": "scss",
      "linter": "eslint",
      "unitTestRunner": "jest"
    },
    "@nrwl/angular:component": { "style": "scss" }
  },
  "projects": {
    "core": {
      "root": "libs/core",
      "sourceRoot": "libs/core/src",
      "projectType": "library",
      "targets": {
        "lint": {
          "executor": "@nrwl/linter:eslint",
          "options": { "lintFilePatterns": ["libs/core/**/*.ts"] }
        },
        "test": {
          "executor": "@nrwl/jest:jest",
          "outputs": ["coverage/libs/core"],
          "options": {
            "jestConfig": "libs/core/jest.config.js",
            "passWithNoTests": true
          }
        },
        "build": {
          "executor": "@nrwl/node:package",
          "outputs": ["{options.outputPath}"],
          "options": {
            "outputPath": "dist/libs/core",
            "tsConfig": "libs/core/tsconfig.lib.json",
            "packageJson": "libs/core/package.json",
            "main": "libs/core/src/index.ts",
            "assets": [
              "libs/core/*.md",
              {
                "glob": "**/*.tmpl",
                "input": "libs/core/assets/",
                "output": "./assets/"
              }
            ]
          }
        },
        "publish": {
          "executor": "@nrwl/workspace:run-commands",
          "options": {
            "cwd": "dist/libs/core",
            "command": "npm publish --access=public"
          }
        },
        "make": {
          "executor": "@nrwl/workspace:run-commands",
          "options": {
            "parallel": false,
            "cwd": "./",
            "commands": [
              "nx lint core",
              "nx test core",
              "nx run core:build",
              "nx publish core"
            ]
          }
        }
      }
    },
    "json2code": {
      "root": "apps/json2code",
      "sourceRoot": "apps/json2code/src",
      "projectType": "application",
      "prefix": "json2code",
      "targets": {
        "build": {
          "executor": "@nrwl/node:build",
          "outputs": ["{options.outputPath}"],
          "options": {
            "outputPath": "dist/apps/json2code",
            "main": "apps/json2code/src/main.ts",
            "tsConfig": "apps/json2code/tsconfig.app.json",
            "assets": [
              "apps/json2code/src/assets",
              {
                "glob": "**/*.tmpl",
                "input": "libs/core/assets/",
                "output": "./assets/"
              }
            ],
            "webpackConfig": "apps/json2code/webpack.config.js"
          },
          "configurations": {
            "production": {
              "optimization": true,
              "extractLicenses": true,
              "inspect": false,
              "fileReplacements": [
                {
                  "replace": "apps/json2code/src/environments/environment.ts",
                  "with": "apps/json2code/src/environments/environment.prod.ts"
                }
              ]
            }
          }
        },
        "serve": {
          "executor": "@nrwl/node:execute",
          "options": { "buildTarget": "json2code:build" }
        },
        "lint": {
          "executor": "@nrwl/linter:eslint",
          "options": { "lintFilePatterns": ["apps/json2code/**/*.ts"] }
        },
        "test": {
          "executor": "@nrwl/jest:jest",
          "outputs": ["coverage/apps/json2code"],
          "options": { "jestConfig": "apps/json2code/jest.config.js" }
        }
      }
    },
    "ng-yacg": {
      "projectType": "application",
      "root": "apps/ng-yacg",
      "sourceRoot": "apps/ng-yacg/src",
      "prefix": "yacg",
      "targets": {
        "build": {
          "executor": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/apps/ng-yacg",
            "index": "apps/ng-yacg/src/index.html",
            "main": "apps/ng-yacg/src/main.ts",
            "polyfills": "apps/ng-yacg/src/polyfills.ts",
            "tsConfig": "apps/ng-yacg/tsconfig.app.json",
            "aot": true,
            "assets": [
              "apps/ng-yacg/src/favicon.ico",
              "apps/ng-yacg/src/assets"
            ],
            "styles": ["apps/ng-yacg/src/styles.scss"],
            "scripts": []
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "apps/ng-yacg/src/environments/environment.ts",
                  "with": "apps/ng-yacg/src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb",
                  "maximumError": "10kb"
                }
              ]
            }
          }
        },
        "serve": {
          "executor": "@angular-devkit/build-angular:dev-server",
          "options": { "browserTarget": "ng-yacg:build" },
          "configurations": {
            "production": { "browserTarget": "ng-yacg:build:production" }
          }
        },
        "extract-i18n": {
          "executor": "@angular-devkit/build-angular:extract-i18n",
          "options": { "browserTarget": "ng-yacg:build" }
        },
        "lint": {
          "executor": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": [
              "apps/ng-yacg/src/**/*.ts",
              "apps/ng-yacg/src/**/*.html"
            ]
          }
        },
        "test": {
          "executor": "@nrwl/jest:jest",
          "outputs": ["coverage/apps/ng-yacg"],
          "options": {
            "jestConfig": "apps/ng-yacg/jest.config.js",
            "passWithNoTests": true
          }
        }
      }
    }
  }
}
